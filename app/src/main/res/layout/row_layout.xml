<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/tvClassicCollectionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView2"
                android:layout_below="@+id/tvClassicPrice"
                android:layout_alignLeft="@+id/tvClassicArtistName"
                android:layout_alignStart="@+id/tvClassicArtistName" />

            <TextView
                android:id="@+id/tvClassicPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="15dp"
                android:text="TextViewPrice" />

            <TextView
                android:id="@+id/tvClassicArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView1"
                android:layout_above="@+id/tvClassicPrice"
                android:layout_toRightOf="@+id/ivImage"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>